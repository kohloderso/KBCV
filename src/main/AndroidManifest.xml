<?xml version="1.0" encoding="utf-8"?>

<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="ck.kbcv">

    <uses-sdk
            android:minSdkVersion="11"
            android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
            android:theme="@style/MyMaterialTheme"
            android:installLocation="auto">




        <activity
            android:label="@string/name"
            android:icon="@drawable/icon_launcher"
            android:name=".MainActivity"
            >
            <intent-filter>

                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>

        </activity>

        <!-- A child of the main activity -->
        <activity
                android:name=".activities.CreateEquationsActivity"
                android:label="Edit ES"
                android:parentActivityName=".MainActivity" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".MainActivity" />
        </activity>

        <!-- A child of the main activity -->
        <activity
                android:name=".activities.CompletionActivity"
                android:label="Completion"
                android:parentActivityName=".MainActivity" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".MainActivity" />
        </activity>

        <!-- A child of the main activity -->
        <activity
                android:name=".activities.PrecedenceActivity"
                android:label="Precedence"
                android:parentActivityName=".MainActivity" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".MainActivity" />
        </activity>

        <!-- A child of the main activity -->
        <activity
                android:name=".activities.SettingsActivity"
                android:label="Settings"
                android:parentActivityName=".MainActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".MainActivity"/>
        </activity>

    </application>

</manifest>