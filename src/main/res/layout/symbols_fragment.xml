<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Variables"
            android:id="@+id/textView" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_marginTop="40dp"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:id="@+id/variableEditText" android:layout_below="@+id/textView" android:layout_alignParentLeft="true"
             android:paddingLeft="5dp" android:selectAllOnFocus="false" android:singleLine="true" android:hint="x y z"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Function symbols"
            android:id="@+id/textView2" android:layout_below="@+id/variableEditText" android:layout_alignParentLeft="true"
            android:layout_marginTop="41dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="arity"
            android:id="@+id/textView3" android:layout_alignBottom="@+id/textView2"
            android:layout_toRightOf="@+id/textView2" android:layout_marginLeft="40dp"/>

    <include android:id="@+id/function_1" layout="@layout/function_helper"
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_below="@+id/textView2"
            />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/plusButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_alignParentBottom="true"/>
</RelativeLayout>