<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme"
           parent="Theme.Base" />

    <style name="Theme.Base"
           parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorAccent">@color/highlight</item>
        <item name="colorPrimary">@color/highlight</item>
        <item name="colorPrimaryDark">@color/highlight_dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:textColor">@color/main</item>
        <item name="android:textColorPrimary">@color/neutral</item>
        <item name="android:textSize">16sp</item>
        <item name="android:windowBackground">@color/neutral</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>

    </style>

</resources>