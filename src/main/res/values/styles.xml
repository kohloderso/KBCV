<resources>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textSize">15sp</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="MyPopupTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="MyButton">
        <item name="colorControlHighlight">@color/colorPrimaryBright</item>
        <item name="colorButtonNormal">@color/button_color</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:minWidth">48dp</item>
    </style>

    <style name="DragButton">
        <item name="colorButtonNormal">@color/colorPrimaryBright</item>
        <item name="android:minWidth">48dp</item>
    </style>

    <style name="FunArityView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/colorPrimaryBright</item>
    </style>


    <style name="FunArityView.Arity">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="EditorViewsStyle">
        <item name="android:textViewStyle">@style/largeText</item>
    </style>

    <style name="largeText" parent="android:Widget.TextView">
        <item name="android:textSize">25sp</item>
        <!-- TODO different font?-->
    </style>

    <style name="Item" parent="">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Item.Small">
        <item name="android:layout_width">@dimen/item_circle_size_small</item>
        <item name="android:layout_height">@dimen/item_circle_size_small</item>
        <item name="android:textSize">@dimen/item_font_size_small</item>
    </style>

    <style name="Item.Medium">
        <item name="android:layout_width">@dimen/item_circle_size_medium</item>
        <item name="android:layout_height">@dimen/item_circle_size_medium</item>
        <item name="android:textSize">@dimen/item_font_size_medium</item>
    </style>

</resources>